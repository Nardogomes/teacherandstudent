{% extends "layout.njk" %}

{% block head %}
    <title>Students</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <a href="/students/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Student</th>
                    <th>E-mail</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{ student.name }}
                        </td>
                        <td>{{ student.email }}</td>
                        <td><a href="/students/{{student.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}