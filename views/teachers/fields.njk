<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
        >
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <input
            type="text"
            name="name"
            placeholder="Nome do professor"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input
            type="date"
            name="birth"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="sexo" value="M" checked> Masculino</span>
        <span><input type="radio" name="sexo" value="F"> Feminino</span>
    </div>
</div>

<div class="item">
    <div>Disciplinas de atuação</div>
    <div>
        <input
            type="text"
            name="disciplinas"
            placeholder="Separe as disciplinas por vírgula"
        >
    </div>
</div>

<button type="submit">Salvar</button>