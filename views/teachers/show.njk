{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            
            <h3>Datalhes</h3>
            <div class="item">
                <div>Teacher</div>
                <div>{{ teacher.name }}</div>
            </div>
            
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ teacher.sexo }}</div>
            </div>

            <div class="item">
                <div>Disciplinas</div>
                <div>
                    {% for disciplina in teacher.disciplinas %}
                        <span>{{ disciplina }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="#" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}