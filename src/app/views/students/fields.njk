<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input
            type="text"
            name="name"
            value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input
            type="email"
            name="email"
            value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input
            type="date"
            name="birth"
            value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input
                type="radio"
                name="sexo"
                value="M"
                {% if student.sexo == "M" %}
                    checked
                {% endif %}
            > Masculino
        </span>
        <span>
            <input
                type="radio"
                name="sexo"
                value="F"
                {% if student.sexo == "F" %}
                    checked
                {% endif %}
            > Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <select name="teacher">
            {% for teacher in teachersOption %}
                <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id %}selected{%endif%}>
                    {{teacher.name}}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<button type="submit">Salvar</button>