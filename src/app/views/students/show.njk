{% extends "layout.njk" %}

{% block head %}
    <title>Students</title>
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            
            <h3>Datalhes</h3>
            <div class="item">
                <div>Estudante</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{ student.email }}</div>
            </div>
            
            <div class="item">
                <div>Idade</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ student.sexo }}</div>
            </div>

            <div class="item">
                <div>Aluno(a) de</div>
                <div>{{ student.teacher_name }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}